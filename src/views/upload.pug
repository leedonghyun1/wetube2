extends base

block content
  div.upload__container
      div.upload__video
        video#preview
        button#actionBtn.social__btn Record Button
      if errorMessage
          span=errorMessage
      form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File 
        input(name="video", id="video", type="file", accept="video/*", required)
        label(for="thumb") Thumbnail
        input(name="thumb", id="thumb", type="file", accept="image/*", required)
        input(placeholder="Title", required, type ="text", name="title")
        input(placeholder="Description", required, type ="text", name="description" minlength=20 )
        input(placeholder="Hashtags, separated by comma,", required, type ="text", name="hashtags")
        input(type="submit", value="Upload Video")

block scripts 
  script(src="/static/js/recorder.js")
