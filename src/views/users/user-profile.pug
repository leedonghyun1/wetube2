extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl === ""
            span
        else
            if loggedInUser.avatarUrl.includes("github")
                img(src=loggedInUser.avatarUrl).avatar
                h3=user.name
            else 
                img(src=loggedInUser.avatarUrl).avatar
    div.video--gird__search
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos.